<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appsdk="http://www.app-sdk.com/schema"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent" >

    <com.appsdk.advancedimageview.AdvancedImageView
        android:id="@+id/ad_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/default_advertise_image"
        appsdk:imageDefault="@drawable/default_advertise_image"
        appsdk:imageError="@drawable/default_advertise_image"
        appsdk:imageLoading="@drawable/default_advertise_image" />

    <ImageButton
        android:id="@+id/ad_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:contentDescription="@null"
        android:padding="8dip"
        android:scaleType="centerInside"
        android:src="@drawable/ad_close_icon" />
    
    <TextView
        android:id="@+id/ad_timetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dip"
        android:background="@drawable/fullscreen_ad_timetext_background"
        android:paddingBottom="3dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="3dip"
        android:textColor="#ffffffff"
        android:textSize="14sp" />

</RelativeLayout>