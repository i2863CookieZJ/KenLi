<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44dip"
    android:background="#00000000" >

    <RelativeLayout
        android:id="@+id/draglistview_footer_content"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:background="#00000000" >

        <ProgressBar
            android:id="@+id/draglistview_footer_progressbar"
            android:layout_width="34dip"
            android:layout_height="34dip"
            android:layout_centerInParent="true"
            android:layout_margin="5dip"
            android:indeterminateDrawable="@drawable/loading_icon_drawable"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/draglistview_footer_hint_textview"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/draglistview_footer_hint_normal" />
    </RelativeLayout>

</LinearLayout>