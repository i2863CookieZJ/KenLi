<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <com.sobey.cloud.webtv.widgets.CustomTitleView
        custom:style="back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        custom:c_title="修改密码" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="bottom"
                    android:text="帐    号"
                    android:textColor="@color/common_gray_text_color"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/ac_changpsw_telphone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:drawableBottom="@drawable/edit_normal_bg"
                    android:gravity="bottom"
                    android:hint="@string/login_username_hint"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="2.0dip"
                    android:paddingLeft="4.0dip"
                    android:singleLine="true"
                    android:textAppearance="@style/MyLoginLogonInputTextStyle"
                    android:textColorHint="@color/login_text_hint_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="bottom"
                    android:text="验证码"
                    android:textColor="@color/common_gray_text_color"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/ac_changpsw_yzm"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@color/white"
                    android:drawableBottom="@drawable/edit_normal_bg"
                    android:gravity="bottom"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:paddingBottom="2.0dip"
                    android:paddingLeft="4.0dip"
                    android:textAppearance="@style/MyLoginLogonInputTextStyle"
                    android:textColorHint="@color/login_text_hint_color" />

                <com.sobey.cloud.webtv.widgets.CountDownButton
                    android:id="@+id/ac_changpsw_sendyzm"
                    android:layout_width="wrap_content"
                    android:layout_height="34.0dip"
                    android:layout_marginRight="2.0dip"
                    android:background="@drawable/redbutton"
                    android:gravity="center"
                    android:paddingLeft="3.0dip"
                    android:paddingRight="3.0dip"
                    android:singleLine="true"
                    android:text="发送验证码"
                    android:textColor="@color/white"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="bottom"
                    android:text="密    码"
                    android:textColor="@color/common_gray_text_color"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/ac_changpsw_psw"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/white"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
                    android:drawableBottom="@drawable/edit_normal_bg"
                    android:gravity="bottom"
                    android:hint="请填写密码"
                    android:inputType="textPassword"
                    android:paddingBottom="2.0dip"
                    android:paddingLeft="4.0dip"
                    android:textAppearance="@style/MyLoginLogonInputTextStyle"
                    android:textColorHint="@color/login_text_hint_color" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/ac_changpsw_submit"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginBottom="15.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/redbutton"
            android:gravity="center"
            android:text="确认提交"
            android:textColor="@color/white"
            android:textSize="16.0sp" />
    </LinearLayout>

</LinearLayout>