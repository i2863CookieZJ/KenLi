<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/content_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f6f6f6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/home_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/n_home_page1"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/new_green"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/quanzi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/icon_group_unchecked"
                android:gravity="center"
                android:text="圈子"
                android:textColor="@color/new_bottom_zi1"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/home_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/n_activity"
                android:gravity="center"
                android:text="活动"
                android:textColor="@color/new_bottom_zi1"
                android:textSize="13sp" />

            
            <TextView
                android:id="@+id/zhiyuanzhe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/n_zhiyuanzhe"
                android:gravity="center"
                android:text="志愿者"
                android:visibility="gone"
                android:textColor="@color/new_bottom_zi1"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/f_posting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/new_posting"
                android:gravity="center"
                android:text="发帖"
                android:textColor="@color/new_bottom_zi1"
                android:textSize="13sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/convenience"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/n_service"
                android:gravity="center"
                android:text="服务"
                android:textColor="@color/new_bottom_zi1"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/my_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/n_self"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/new_bottom_zi1"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/ebusiness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/new_ebusiness"
                android:gravity="center"
                android:text="电商"
                android:textColor="@color/new_bottom_zi1"
                android:textSize="13sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>