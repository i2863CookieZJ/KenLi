<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appsdk="http://www.app-sdk.com/schema"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10.0dip" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60.0dip" >

            <com.appsdk.advancedimageview.AdvancedImageView
                android:id="@+id/item_subject_detail_iv"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/default_thumbnail_banner"
                appsdk:aspectRatio="1.0"
                appsdk:fadeInDuration="0.3"
                appsdk:imageDefault="@drawable/default_thumbnail_banner"
                appsdk:imageError="@drawable/default_thumbnail_banner"
                appsdk:imageLoading="@drawable/default_thumbnail_banner"
                appsdk:roundRadius="6" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@+id/item_subject_detail_iv"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_subject_detail_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="纪录片"
                    android:textColor="@color/common_red_color"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/item_subject_detail_des_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="纪录片详情"
                    android:textColor="@color/common_light_gray_text_color"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_subject_detail_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_subject_detail_like_num_tv"
            android:lineSpacingExtra="6.0dip"
            android:text="有关【厚叶花叶花】和【荷花】，看图，新人慎入"
            android:textColor="#ff040404"
            android:textSize="20.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_subject_detail_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_toLeftOf="@+id/item_subject_detail_like_num_tv"
            android:lineSpacingExtra="8.0dip"
            android:text="有关【厚叶花叶花】和【荷花】，看图，新人慎入有关【厚叶花叶花】和【荷花】，看图，新人慎入有关【厚叶花叶花】和【荷花】，看图，新人慎入有关【厚叶花叶花】和【荷花】，看图，新人慎入有关【厚叶花叶花】和【荷花】，看图，新人慎入有关【厚叶花叶花】和【荷花】，看图，新人慎入"
            android:textColor="#ff000000"
            android:textSize="16.0sp" />

        <LinearLayout
            android:id="@+id/item_subject_detail_image_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:orientation="vertical" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip" >

        <Button
            android:id="@+id/item_subject_detail_go_group_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_grey_with_corner"
            android:paddingBottom="4.0dip"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="4.0dip"
            android:text="同城圈 >"
            android:textColor="@color/white"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/item_subject_detail_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="4.0dip"
            android:drawableLeft="@drawable/icon_group_reply_nor"
            android:gravity="center_vertical"
            android:text="  20"
            android:textColor="@color/grey_group_for_des"
            android:textSize="12.0sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_subject_detail_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip"
            android:layout_toLeftOf="@+id/item_subject_detail_reply"
            android:drawableLeft="@drawable/icon_group_like_nor"
            android:gravity="center_vertical"
            android:text="  3ddd"
            android:textColor="@color/grey_group_for_des"
            android:textSize="12.0sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="10.0dip"
        android:background="@color/grey_group_bg" />

    <LinearLayout
        android:id="@+id/item_subject_detail_like_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_group_bg"
        android:orientation="horizontal"
        android:paddingBottom="15.0dip"
        android:paddingLeft="10.0dip"
        android:paddingTop="15.0dip" />

</LinearLayout>