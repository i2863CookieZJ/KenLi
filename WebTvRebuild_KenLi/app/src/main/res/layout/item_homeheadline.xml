<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/selector_home_list"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/new_pic_rl"
            android:layout_width="115dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/item_homeheadline_newspic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/default_thumbnail_video" />

            <ImageView
                android:id="@+id/item_homeheadline_videotagpic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/new_attention_videnews_centericon" />

            <TextView
                android:id="@+id/item_homeheadline_videotagtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/new_attention_videotimelabel_bg"
                android:gravity="right|center_vertical"
                android:paddingRight="8dp"
                android:text="00:30:30"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/new_pic_rl"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_homeheadline_newstitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="这是标题这是标题这是是标题这是是标题这是"
                android:textColor="@color/common_dark_gray_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_homeheadline_newssummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/newattention_itemtitle_marginleft"
                android:layout_marginRight="@dimen/newattention_itemtitle_marginleft"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="这是摘要这是摘要这是摘要是摘要是摘要是摘要"
                android:textColor="#838383"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_homeheadline_newspushtime"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="00-00		00:00"
                android:textColor="#838383"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/shadow_line" />

</LinearLayout>