<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:layout_gravity="center" >

    <FrameLayout
        android:id="@+id/post_more_add_pic_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/post_more_add_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/selector_post_add_item_bg"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:src="@drawable/btn_pb_add_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/picture"
                android:textColor="@color/grey_group_for_name"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_more_pictures_num_layout"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:visibility="gone"
            android:background="@drawable/point_red"
            android:gravity="center" >

            <TextView
                android:id="@+id/post_more_pictures_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/post_more_add_add_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_toRightOf="@id/post_more_add_pic_layout"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/post_more_add_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_post_add_item_bg"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:src="@drawable/btn_pb_add_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/friend"
            android:textColor="@color/grey_group_for_name"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>