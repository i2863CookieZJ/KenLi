<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
     >

    <com.sobey.cloud.webtv.widgets.HorizontalListView
        android:id="@+id/post_comment_bottom_pictures_horizontallistview"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />
	<TextView 
	    android:id="@+id/post_comment_bottom_pictures_textview"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/grey_group_for_name"
        android:text="已选0张，还剩10张可选"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>
</LinearLayout>