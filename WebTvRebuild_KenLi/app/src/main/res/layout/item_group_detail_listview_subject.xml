<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appsdk="http://www.app-sdk.com/schema"
    android:id="@+id/item_subject_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_quanzidetail_item"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8.0dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8.0dip" >

            <com.appsdk.advancedimageview.AdvancedImageView
                android:id="@+id/item_subject_iv"
                android:layout_width="35.0dip"
                android:layout_height="35.0dip"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/default_thumbnail_banner"
                appsdk:aspectRatio="1.0"
                appsdk:fadeInDuration="0.3"
                appsdk:imageDefault="@drawable/default_thumbnail_banner"
                appsdk:imageError="@drawable/default_thumbnail_banner"
                appsdk:imageLoading="@drawable/default_thumbnail_banner"
                appsdk:roundRadius="6" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip" >

                <TextView
                    android:id="@+id/item_subject_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="纪录片"
                    android:textColor="@color/common_red_color"
                    android:textSize="16.0sp" />

                <LinearLayout
                    android:id="@+id/item_subject_jblayout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="15.0dip"
                        android:layout_height="15.0dip"
                        android:layout_marginRight="5.0dip"
                        android:src="@drawable/quanzi_item_jb_small" />

                    <TextView
                        android:id="@+id/item_subject_des_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-09-12 12:23:34"
                        android:textColor="@color/common_light_gray_text_color"
                        android:textSize="12.0sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/essence_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:background="@drawable/tv_jinghua"
                android:gravity="center"
                android:paddingBottom="2.0dip"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:paddingTop="2.0dip"
                android:text="精"
                android:textColor="@color/common_red_color"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/top_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:background="@drawable/tv_zhiding"
                android:gravity="center"
                android:paddingBottom="2.0dip"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:paddingTop="2.0dip"
                android:text="顶"
                android:textColor="#ffc751ba"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/item_subject_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:text="有关【厚叶花叶花】和【荷花】，看图，新人慎入"
                android:textColor="@color/common_gray_text_color"
                android:textSize="16.0sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_subject_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_marginTop="8.0dip"
            android:maxLines="4"
            android:text="有关【厚叶花叶花】和【荷花】，看图，新人慎入有关【厚叶花叶花】和【荷花】，看图，新人慎入有关【厚叶花叶花】和【荷花】，看图，新人慎入有关【厚叶花叶花】和【荷花】，看图，新人慎入有关【厚叶花叶花】和【荷花】，看图，新人慎入有关【厚叶花叶花】和【荷花】，看图，新人慎入"
            android:textColor="@color/grey_group_for_des"
            android:textSize="14.0sp" />

        <LinearLayout
            android:id="@+id/item_subject_content_img_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_marginTop="8.0dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_subject_content_img1"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/default_thumbnail_banner" />

            <ImageView
                android:id="@+id/item_subject_content_img2"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/default_thumbnail_banner" />

            <ImageView
                android:id="@+id/item_subject_content_img3"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/default_thumbnail_banner" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/shadow_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15.0dip"
                android:layout_height="15.0dip"
                android:src="@drawable/quanzi_item_pl_small" />

            <TextView
                android:id="@+id/item_subject_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3.0dip"
                android:text="0"
                android:textColor="@color/common_light_gray_text_color"
                android:textSize="12.0sp" />
        </LinearLayout>

        <TextView
            android:layout_width="1.0px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="fill_parent"
            android:background="@drawable/shadow_line" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="15.0dip"
                android:layout_height="15.0dip"
                android:src="@drawable/quanzi_item_dz_small" />

            <TextView
                android:id="@+id/item_subject_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3.0dip"
                android:text="0"
                android:textColor="@color/common_light_gray_text_color"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/shadow_line" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="8.0dip"
        android:background="@color/grey_group_bg" />

</LinearLayout>