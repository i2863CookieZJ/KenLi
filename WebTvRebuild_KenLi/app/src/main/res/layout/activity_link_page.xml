<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.sobey.cloud.webtv.widgets.CustomTitleView
        custom:style="back"
        android:id="@+id/header_ctv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <WebView
        android:id="@+id/advWebview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_ctv" />

    <ProgressBar
        android:id="@+id/webPageLoadProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/header_ctv"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="-2dp"
        android:max="100" />
    <!-- android:progressDrawable="@drawable/webpage_progressbar" -->

</RelativeLayout>