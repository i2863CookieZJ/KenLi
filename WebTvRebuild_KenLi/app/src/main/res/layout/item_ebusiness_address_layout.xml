<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刘德华"
        android:textColor="@color/black_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/phone_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="18888881688"
        android:textColor="@color/black_gray"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/address_tv_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_tv"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="四川省高新区天府软件园e3-14层索贝云计算四川省高新区天府软件园e3-14层索贝云计算四川省高新区天府软件园e3-14层索贝云计算"
            android:textColor="@color/grey_group_for_des"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/post_no_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_tv_layout"
        android:layout_marginBottom="10dp"
        android:text="12345678"
        android:textColor="@color/grey_group_for_des"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_no_tv"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/line_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_line" />

        <TextView
            android:id="@+id/set_default_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_img"
            android:text="设为默认"
            android:textColor="@color/grey_group_for_des"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/line_img"
            android:text="删除"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_img"
            android:layout_toLeftOf="@+id/delete_tv"
            android:layout_toRightOf="@+id/set_default_tv"
            android:text="编辑"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>