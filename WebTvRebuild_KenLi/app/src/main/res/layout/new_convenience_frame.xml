<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_backgroud"
    android:orientation="vertical" >

    <com.sobey.cloud.webtv.widgets.CustomTitleView
        custom:style="single"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        custom:c_title="政务" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="政务公告"
                android:textColor="@color/new_bottom_zi1"
                android:textSize="15sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <LinearLayout
                    android:id="@+id/tz_zhongxin_lin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp" >

                    <TextView
                        android:id="@+id/tz_conter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/convenience_tongzhi"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="@string/zhengwu_item0"
                        android:textColor="@color/new_home_m_z" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bs_zhinan_lin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp" >

                    <TextView
                        android:id="@+id/bs_zhinan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/convenience_zhinan"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="@string/zhengwu_item1"
                        android:textColor="@color/new_home_m_z" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jg_huangye_lin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp" >

                    <TextView
                        android:id="@+id/jg_huangy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/convenience_suan"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="@string/zhengwu_item2"
                        android:textColor="@color/new_home_m_z" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_shadow" >
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="交通出行"
                android:textColor="@color/new_bottom_zi1"
                android:textSize="15sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white" >

                <LinearLayout
                    android:id="@+id/policy_statute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/convenience_zcfg"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="@string/zhengwu_item3"
                        android:textColor="@color/new_home_m_z" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/certificates_handle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/convenience_zjbl"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="@string/zhengwu_item4"
                        android:textColor="@color/new_home_m_z" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="invisible" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/convenience_suan"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="@string/zhengwu_item2"
                        android:textColor="@color/new_home_m_z" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_shadow" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <TextView
                        android:id="@+id/map"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/convenience_map"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="地图"
                        android:textColor="@color/new_home_m_z" />

                    <TextView
                        android:id="@+id/wz_chaxun"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/convenience_cha"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="违章查询"
                        android:textColor="@color/new_home_m_z" />

                    <TextView
                        android:id="@+id/gongjiao"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/convenience_car"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="公交"
                        android:textColor="@color/new_home_m_z" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/dache"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/convenience_dache"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="打车"
                        android:textColor="@color/new_home_m_z" />

                    <TextView
                        android:id="@+id/ct_keyun"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/convenience_chtu"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="长途客运"
                        android:textColor="@color/new_home_m_z" />

                    <TextView
                        android:id="@+id/lc_shike"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/convenience_lieche"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="列车时刻"
                        android:textColor="@color/new_home_m_z" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/line_shadow" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>