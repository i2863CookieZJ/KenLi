<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appsdk="http://www.app-sdk.com/schema"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/mAdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" >

                <com.appsdk.advancedimageview.AdvancedImageCarousel
                    android:id="@+id/mAdImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    appsdk:aspectRatio="5.0"
                    appsdk:imageDefault="@drawable/trans"
                    appsdk:imageError="@drawable/trans"
                    appsdk:imageLoading="@drawable/trans" />

                <ImageButton
                    android:id="@+id/mAdCloseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:contentDescription="@null"
                    android:padding="8dip"
                    android:scaleType="centerInside"
                    android:src="@drawable/ad_close_icon"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/new_lines" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/lin_quanzi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp" >

                    <LinearLayout
                        android:layout_width="1.5dp"
                        android:layout_height="fill_parent"
                        android:background="@color/new_green" >
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="圈子"
                        android:textColor="@color/new_home_m_z"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text="今日热帖"
                        android:textColor="@color/new_home_m_z"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/new_lines" >
                </LinearLayout>

                <com.sobey.cloud.webtv.fragment.utils.MyListView
                    android:id="@+id/qz_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#f6f6f6"
                    android:dividerHeight="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/new_lines" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp" >

                    <LinearLayout
                        android:layout_width="1.5dp"
                        android:layout_height="fill_parent"
                        android:background="@color/new_green" >
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="活动"
                        android:textColor="@color/new_home_m_z"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/more_ac"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="更多活动"
                        android:textColor="@color/new_home_m_z"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/new_lines" >
                </LinearLayout>

                <com.sobey.cloud.webtv.fragment.utils.MyListView
                    android:id="@+id/hd_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/new_lines" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/lin_bianmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp" >

                    <LinearLayout
                        android:layout_width="1.5dp"
                        android:layout_height="fill_parent"
                        android:background="@color/new_green" >
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="便民早知道"
                        android:textColor="@color/new_home_m_z"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text="今日热点"
                        android:textColor="@color/new_home_m_z"
                        android:textSize="12sp"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/new_lines" >
                </LinearLayout>

                <com.sobey.cloud.webtv.fragment.utils.MyListView
                    android:id="@+id/bm_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#f6f6f6"
                    android:dividerHeight="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/new_lines" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/new_lines" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp" >

                    <LinearLayout
                        android:layout_width="1.5dp"
                        android:layout_height="fill_parent"
                        android:background="@color/new_green" >
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="资讯"
                        android:textColor="@color/new_home_m_z"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/zixun"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:text="今日热帖"
                        android:textColor="@color/new_home_m_z"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/new_lines" >
                </LinearLayout>

                <com.sobey.cloud.webtv.fragment.utils.MyListView
                    android:id="@+id/zx_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#f6f6f6"
                    android:dividerHeight="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/new_lines" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp" >

                    <LinearLayout
                        android:layout_width="1.5dp"
                        android:layout_height="fill_parent"
                        android:background="@color/new_green" >
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="图说"
                        android:textColor="@color/new_home_m_z"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/more_price"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="更多美图"
                        android:textColor="@color/new_home_m_z"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/new_lines" >
                </LinearLayout>

                <com.sobey.cloud.webtv.fragment.utils.MyGridView
                    android:id="@+id/ts_gridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:numColumns="3" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/new_setting"
                android:gravity="center"
                android:padding="10dp"
                android:text="首页管理"
                android:textColor="#848484"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>