<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appsdk="http://www.app-sdk.com/schema"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_for_group_item"
    android:clickable="true"
    android:orientation="vertical" >

    <!-- 分割线 -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/shadow_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_zhiding"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:text="顶"
            android:textColor="#c751ba"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_top_subject_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:text="【男人帮】第二十期：世间所有的相遇都是久别的重逢，阿里山的叫法是的链接法律上"
            android:textColor="@color/grey_group_for_name"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>